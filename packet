sudo sh -c 'echo "ServerName localhost" >> /etc/apache2/conf.d/name'

sudo useradd -d /home/quang.pham -m quang.pham
sudo passwd quang.pham
sudo usermod -a -G sudo quang.pham
sudo usermod -a -G www-data quang.pham

